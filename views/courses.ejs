<h2 class="mb-4">
  Courses
  <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
</h2>

<% if (typeof courses !== 'undefined' && courses.length > 0) { %>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Course Code</th>
        <th></th> <!-- Remove column header -->
      </tr>
    </thead>
    <tbody>
      <% courses.forEach(function(course) { %>
      <tr>
        <td>
          <a href="/students?course=<%= course.courseId %>"><%= course.courseDescription %></a>
        </td>
        <td>
          <a href="/course/<%= course.courseId %>"><%= course.courseCode %></a>
        </td>
        <td>
          <a
            href="/course/delete/<%= course.courseId %>"
            class="btn btn-danger btn-sm"
            onclick="return confirm('Are you sure you want to delete this course?');"
          >
            Remove
          </a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<% } else if (typeof message !== 'undefined') { %>
<div class="col-md-12 text-center">
  <strong><%= message %></strong>
</div>
<% } %>
